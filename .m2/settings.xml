<?xml version="1.0" encoding="UTF-8"?>
<settings
        xmlns="http://maven.apache.org/SETTINGS/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <mirrors>
        <mirror>
            <id>artifactory</id>
            <mirrorOf>*</mirrorOf>
            <url>https://artifactory.cengage.info/artifactory/cengage-central-maven/</url>
        </mirror>
    </mirrors>
    <profiles>
        <profile>
            <id>central-repo</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>artifactory</id>
            <repositories>
                <repository>
                    <id>cengage.analytics.group</id>
                    <name>Cengage Analytics Group repo</name>
                    <url>${cengageGroupRepo}</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>cengage.analytics.group</id>
                    <name>Cengage Analytics Group plugin repo</name>
                    <url>${cengageGroupRepo}</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        <profile>
            <id>deploy-to-artifactory</id>
            <properties>
                <cengageReleaseRepo>https://artifactory.cengage.info/artifactory/cengage-releases/</cengageReleaseRepo>
                <cengageShapshotsRepo>https://artifactory.cengage.info/artifactory/cengage-snapshots/</cengageShapshotsRepo>
                <cengageGroupRepo>https://artifactory.cengage.info/artifactory/cengage-central-maven/</cengageGroupRepo>
            </properties>
        </profile>
    </profiles>
 
    <activeProfiles>
        <activeProfile>deploy-to-artifactory</activeProfile>
        <activeProfile>artifactory</activeProfile>
    </activeProfiles>

    <servers>
        <server>
            <id>gitlab-maven</id>
            <configuration>
                <httpHeaders>
                    <property>
                        <name>Deploy-Token</name>
                        <value>geG6hDzn_72QvoPWhGMs</value>
                    </property>
                </httpHeaders>
            </configuration>
        </server>
    </servers>
</settings>